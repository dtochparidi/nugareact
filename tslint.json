{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "curly": [true, "as-needed"],
    "no-debugger": false,
    "no-unused-variable": true
  },
  "jsRules": {
    "no-console": false,
    "curly": [true, "as-needed"],
    "no-debugger": false
  }
}
